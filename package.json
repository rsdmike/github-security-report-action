{
  "name": "github-security-report",
  "version": "2.0.0",
  "description": "Generates a report from GitHub CodeQL and Dependency information",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "package": "npm run build && ncc build --no-source-map-register",
    "postpack": "tarball=$(npm list - depth 0 | sed 's/@/-/g; s/ .*/.tgz/g; 1q;'); tar -tf $tarball | sed 's/^package\\///' | zip -@r github-security-report-bundle",
    "test": "mocha --recursive --reporter-option maxDiffSize=16384  -r ts-node/register \"src/**/*.test.ts\""
  },
  "keywords": [],
  "author": "Peter Murray",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/io": "^1.1.3",
    "@octokit/rest": "^20.0.1",
    "commander": "^11.0.0",
    "dompurify": "^3.0.6",
    "jsdom": "^23.0.1",
    "marked": "^10.0.0",
    "nunjucks": "^3.2.4",
    "nunjucks-markdown": "^2.0.1",
    "puppeteer-core": "^21.6.1"
  },
  "devDependencies": {
    "@octokit/types": "^12.4.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.01",
    "@types/node": "^20.9.2",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vercel/ncc": "^0.36.1",
    "chai": "^4.3.8",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^40.0.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "ts-sinon": "^2.0.2",
    "typescript": "^5.2.2"
  }
}
